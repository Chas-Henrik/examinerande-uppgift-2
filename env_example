# development example
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.r6jzab0.mongodb.net/trulloDatabase?retryWrites=true&w=majority&appName=Cluster0
JWT_SECRET=<secret-key>
PORT=3000
FRONTEND_URL=http://localhost:3000
NODE_ENV=development

# production example (prefix with https://localhost:3443/ in Thunder Client)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.r6jzab0.mongodb.net/trulloDatabase?retryWrites=true&w=majority&appName=Cluster0
JWT_SECRET=<secret-key>
PORT=3443
